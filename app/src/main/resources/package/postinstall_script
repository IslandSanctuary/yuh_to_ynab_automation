#!/bin/bash

# Post-install script for CSV Monitor CLI
# This script creates symlinks to make the CLI tool accessible from PATH

APP_NAME="CSV Monitor"
CLI_NAME="csvmonitor"
INSTALL_DIR="/Applications/${APP_NAME}.app"
SYMLINK_DIR="/usr/local/bin"
EXECUTABLE_PATH="${INSTALL_DIR}/Contents/MacOS/${CLI_NAME}"

echo "Setting up CSV Monitor CLI..."

# Create /usr/local/bin if it doesn't exist
if [ ! -d "$SYMLINK_DIR" ]; then
    echo "Creating $SYMLINK_DIR directory..."
    mkdir -p "$SYMLINK_DIR"
fi

# Remove existing symlink if it exists
if [ -L "$SYMLINK_DIR/$CLI_NAME" ]; then
    echo "Removing existing symlink..."
    rm "$SYMLINK_DIR/$CLI_NAME"
fi

# Create new symlink
if [ -f "$EXECUTABLE_PATH" ]; then
    echo "Creating symlink: $SYMLINK_DIR/$CLI_NAME -> $EXECUTABLE_PATH"
    ln -s "$EXECUTABLE_PATH" "$SYMLINK_DIR/$CLI_NAME"
    
    # Make sure the symlink is executable
    chmod +x "$SYMLINK_DIR/$CLI_NAME"
    
    echo "CSV Monitor CLI is now available in your PATH as '$CLI_NAME'"
    echo "You can run it from anywhere using: $CLI_NAME [options]"
else
    echo "Error: Executable not found at $EXECUTABLE_PATH"
    exit 1
fi

# Verify installation
if command -v "$CLI_NAME" >/dev/null 2>&1; then
    echo "Installation successful! CSV Monitor CLI is ready to use."
else
    echo "Warning: $CLI_NAME may not be in your PATH. You may need to restart your terminal."
fi

exit 0