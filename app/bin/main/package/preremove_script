#!/bin/bash

# Pre-remove script for CSV Monitor CLI
# This script cleans up symlinks before uninstalling

CLI_NAME="csvmonitor"
SYMLINK_DIR="/usr/local/bin"
SYMLINK_PATH="$SYMLINK_DIR/$CLI_NAME"

echo "Cleaning up CSV Monitor CLI..."

# Remove symlink if it exists
if [ -L "$SYMLINK_PATH" ]; then
    echo "Removing symlink: $SYMLINK_PATH"
    rm "$SYMLINK_PATH"
    echo "CSV Monitor CLI symlink removed."
else
    echo "No symlink found at $SYMLINK_PATH"
fi

exit 0